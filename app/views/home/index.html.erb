<% unless current_user %>
  <h3 class="home_login"><%= link_to "log in", '#' %> / <%= link_to "join", '#' %></h3>

  <div class="log_in_form">
    <h4>Log In</h4>
    <% if flash %>
      <% flash.each do |k, v| %>
        <p class=<%= flash_class(k) %><%= k %>: <%= v %></p>
      <% end %>
    <% end %>

    <%= form_tag sessions_path do %>
      <%= email_field_tag :email, nil, :placeholder => "Email" %>
      <%= password_field_tag :password, nil, :placeholder => "Password" %>
      <%= button_tag "Sign In" %>
    <% end %>
    <%= link_to "close", '#', :class=> "home_form_close" %>
  </div>

  <div class="join_form">
    <h4>Join</h4>
    <% if flash %>
      <% flash.each do |k, v| %>
        <p class=<%= flash_class(k) %><%= k %>: <%= v %></p>
      <% end %>
    <% end %>

    <%= form_for @user do |u| %>
      <%= u.text_field :first_name, :placeholder => "First name" %>
      <%= u.text_field :last_name, :placeholder => "Last name" %>
      <%= u.email_field :email, :placeholder => "Email" %>
      <%= u.password_field :password, :placeholder => "Password" %>
      <%= u.password_field :password_confrim, :placeholder => "Confirm Password" %>
      <%= u.submit "Create Account" %>
    <% end %>
    <%= link_to "close", '#', :class=> "home_form_close" %>
  </div>
<% end %>