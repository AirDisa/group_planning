<div class="wrapper">

  <div class="event_info"> <!-- Main Column -->
    <%= render :partial => "event_info", :locals => { :event => @event } %>

    <% if @all_comments %>
      <% @all_comments.each do |comment| %>
        <div class='full_comment'>
          <div class='comment_image'><%= image_tag User.find(comment.user_id).profile_pic, {:size => '50x50'}%></div>
          <div class='comment_body'><%= comment.comment%></div>
          <div class='comment_posted_at'>Posted <%= comment.time %> hours ago. </div>
        </div><br>
      <% end %>
    <% end %>

    <%= form_tag({:controller => 'comments', :action=>'create'}, :method => 'post') do %>
      <%= text_field_tag "comment", nil, :placeholder=> "Leave a Comment" %>
      <%= hidden_field_tag 'event_id', @event.id%>
      <%= button_tag("Comment", :id => "comment_button")%>
    <% end %>

    <% unless @invitee.responded %>
    <%= render :partial => "event_conditions", :locals => { :event => @event, :invitee => @invitee } %>
    <% end %>

  </div>

  <div class ='vertical'> <!-- Left Column -->
    <%= render :partial => "event_sidebar", :locals => { :event => @event } %>
  </div>

  <div class="clear"></div>

</div>
