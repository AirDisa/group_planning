<% if event.closed? %>
  <div class="closed">
    <%= image_tag "events/expired.png", :height => "210" %>
  </div>
<% end %>
<%= image_tag @event.image, :class => "event_page_image", :size=>"440x210" %>
<% if event.down_payment %>
<span class="payment-required">
  The organizer of this event has required a payment of <%= number_to_currency(event.down_payment / 100.0) %> to RSVP.<br><br>
</span>
<% end %>
<h2>
  <%= best_in_place_if current_user.id == @event.creator_id, @event, :title, :type => :input %>
</h2>
<h5 id="start_time"><%= (@event.start_time - 5.hours).strftime("%A, %b %e at %l:%M %P CST") %></h5>
<h3 class='description'>
  <%=  best_in_place_if current_user.id == @event.creator_id, @event, :description, :type => :textarea, :nil => "click here to edit this field" %>
</h3>
